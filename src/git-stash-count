function git-stash-count()
{
    if git-in-repository
    then
        local stash_log_path
        stash_log_path=$(git rev-parse --show-toplevel)/.git/logs/refs/stash

        if [[ ! -e ${stash_log_path} ]]
        then
          echo 0
          return 0
        fi

        cat ${stash_log_path} | wc -l 2>/dev/null
        return 0
    fi

    return 1
}
